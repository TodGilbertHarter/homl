/: /BENEFITS /TRUE /FIRST /V! , benefits: /SPACE [ /[" /FEATS "]/ /VOCAB@ /ACTIVE :/
/: /BENEFIT /FIRST /V@ /NOT /IF , /THEN /FALSE /FIRST /V! " /GETMATCHING BENEFIT/ /DELIMITED /TRIM /. " :/
/: BENEFITS/ ] /[" /FEATS "]/ /VOCAB@ /INACTIVE :/
